worker_processes 1;
daemon off; # important to run in the foreground

error_log stderr;
events { worker_connections 1024; }

http {
    server {
        listen <%= ENV["PORT"] %>; # ensure this line is correctly configured
        server_name _;
        location / {
            root /app; # ensure your file path is correct; typically it's /app for Heroku
            index index.html index.htm;
            try_files $uri $uri/ =404;
        }
    }
}
